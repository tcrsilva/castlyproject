<!DOCTYPE html>
<html>
  <head>
    <title>Castly</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!-- DESGIN -->
		  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
      <meta name="keywords" content="">
		<!-- Favicon --
      <= favicon_link_tag asset_path('iconcrabs.png') %>
		-- CSS -->
		<!-- Fonts/Icons 
		<link href="app/assets/plugins/font-awesome/css/all.css" rel="stylesheet">
		<link href="app/assets/plugins/themify/themify-icons.min.css" rel="stylesheet">-->
  </head>

  <body>
    <header>
			<nav class="navbar navbar-absolute"><!-- add 'navbar-dark/navbar-grey/navbar-transparent/navbar-transparent-dark' -->
				<div class="container">
					<ul class="list-horizontal-unstyled">
					  <!--COLOCAR ICONES DE IMAGENS-->
						<%= link_to 'F', root_path, class:"fab fa-facebook-f" %>
						<%= link_to 'T', root_path, class:"fab fa-twitter" %>
						<%= link_to 'P', root_path, class:"fab fa-pinterest" %>
					</ul>
					<a class="position-center" href="#">
						<h4>castly</h4>
					</a>
					<!-- Toggle button of Fullscreen menu -->
					<button class="fullscreen-toggle-btn">
			       <span class="lines"></span>
			     </button>
				</div><!-- end container -->
			</nav><!-- end navbar -->
			
			<div class="fullscreen-menu bg-black"><!-- Add your background class here -->
				<div class="fullscreen-menu-wrapper text-center">
					<div class="position-top">
						<h3>castly</h3>
					</div>
					<div class="position-middle">
						<ul class="list-horizontal-unstyled">
							<li>
								<h2><%= link_to 'Home', root_path, class:"hyperlink-7" %></h2>
							</li>
							
							<li>
								<h2><%= link_to 'About', servicos_index_path, class:"hyperlink-7" %></h2>
							</li>
							<li>
								<h2><%= link_to 'Portfolio', portfolio_index_path, class:"hyperlink-7" %></h2>
							</li>
							<li>
								<h2><%= link_to 'Clientes', clientes_index_path, class:"hyperlink-7" %></h2>
							</li>
							<li>
								<h2><%= link_to 'Shop', root_path, class:"hyperlink-7" %></h2>
							</li>
						</ul>
					</div>
				</div>
				<!-- end fullscreen-menu-wrapper -->
			</div>
			<!-- end fullscreen-menu -->
		</header>
    <%= yield %>
    
    <footer>
      <div class="footer bg-dark">
				<div class="container">
					<div class="row align-items-center">
						<div class="col-12 col-md-4 text-center text-md-left">
							<h4 class="no-margin">Castly</h4>
						</div>
						<div class="col-12 col-md-4 text-center">
							<p>&copy; 2018 FlaTheme, All Rights Reserved.</p>
						</div>
						<div class="col-12 col-md-4 text-center text-md-right">
							<ul class="list-horizontal-unstyled">
								<li><a href="#"><i class="fab fa-facebook-f"></i></a></li>
								<li><a href="#"><i class="fab fa-twitter"></i></a></li>
								<li><a href="#"><i class="fab fa-pinterest"></i></a></li>
								<li><a href="#"><i class="fab fa-instagram"></i></a></li>
							</ul>
						</div>
					</div><!-- end row -->
				</div><!-- end container -->
			</div>
		</footer>
  </body>
</html>
